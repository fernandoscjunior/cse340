<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="form">
    <form action="/account/update/info" method="post">
        <label for="first-name">First Name:</label>
        <input type="text" id="first-name" name="account_firstname" required value="<%= locals.user_firstname %>">
        <label for="last-name">Last Name:</label>
        <input type="text" id="last-name" name="account_lastname" required value="<%= locals.user_lastname %>">
        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" required value="<%= locals.user_email %>">

        <input type="hidden" name="account_id" <% if(locals.user_id) { %> value="<%= locals.user_id %>" <% } %>>
        <input type="submit" id="submit" value="Update">
    </form>
</div>

<div class="form">
    <form action="/account/update/password" method="post">
        <h3>Update Password</h3>
        <p>The password must be 12 characters in length minimum,<br>
            Contain at least 1 capital letter,<br>
            Contain at least 1 number,<br>
            Contain at least 1 special character.
        </p>
        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" 
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" 
        required>

        <input type="hidden" name="account_id" <% if(locals.user_id) { %> value="<%= locals.user_id %>" <% } %>>
        <input type="submit" id="submit" value="Update">
    </form>
</div>