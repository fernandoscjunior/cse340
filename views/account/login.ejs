<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="form">
    <form action="/account/login" method="post">
        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" required value="<%= locals.account_email %>">
        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" 
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        required>
        <p>The password must be 12 characters in length minimum,<br>
            Contain at least 1 capital letter,<br>
            Contain at least 1 number,<br>
            Contain at least 1 special character.
        </p>
        <input type="submit" id="submit" value="Login">
        <a href="/account/register">No account? <u>Sign-up</u></a>
    </form>
</div>